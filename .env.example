# Copy this file to `.env` and adjust values as needed.

# Device selection: auto | cpu | cuda | mps
WANVIDGEN_DEVICE=auto

# CUDA options (only used when device=cuda). Set to -1 for default.
WANVIDGEN_GPU_INDEX=-1

# Fraction of GPU memory the app should consider usable (0.0 - 1.0)
WANVIDGEN_GPU_MEMORY_FRACTION=1.0

# Enable TF32 on supported NVIDIA GPUs (true/false)
WANVIDGEN_ALLOW_TF32=true

# Numerical precision: fp32 | fp16 | bf16
WANVIDGEN_PRECISION=fp16

# Quantization setting: none | q5 | q6
WANVIDGEN_QUANTIZATION=none

# Sampler and scheduler defaults
WANVIDGEN_SAMPLER=euler
WANVIDGEN_SCHEDULER=karras

# Optional model directory (must exist if set)
# WANVIDGEN_MODEL_DIR=./models

# Output/caching directories (created if missing)
WANVIDGEN_OUTPUT_DIR=./outputs
WANVIDGEN_CACHE_DIR=./cache
WANVIDGEN_TEMP_DIR=./tmp

# Runtime batching
WANVIDGEN_BATCH_SIZE=1
WANVIDGEN_NUM_WORKERS=0

# Logging preferences
WANVIDGEN_LOG_LEVEL=INFO
WANVIDGEN_LOG_JSON=false
# WANVIDGEN_LOG_FILE=./wanvidgen.log

# If true, run gc.collect() and torch.cuda.empty_cache() during config load
WANVIDGEN_CLEAR_MEMORY_ON_LOAD=false
